<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
   
    @if (ViewBag.HideNavBar == null)
    {
    <div class="nav">
        <ul class="container-nav">
            <li class="heading">
                @Html.ActionLink("Home", "Index", "Resources", new { area = "" }, new { @class = "navbar-brand" })
            </li><!--heading-->
            
            <li class="login">
                @Html.Partial("_LoginPartial")
            </li><!--login-->

            <li class="search">
                @using (Html.BeginForm())
                {
                    <p>
                        @Html.TextBox("searchString")
                            <input type="submit" value="Search" class="button1"/>
                            <button class="button2" onclick="location.href='@Url.Action("Index")';return false;">x</button>


                        @using (Html.BeginForm("Index", "ResourcesController", null, FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
                        {

                        }
                    </p>
                }
            </li><!--search-->

            </ul> <!--containter nav?-->
        </div>
        }



    <div class="container-body">
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
