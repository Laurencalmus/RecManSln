<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!--<link href="~/Style/StyleSheet.css" rel="stylesheet" />-->
</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-nav">
            <div class="header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Lesson Collab", "Index", "Resources", new { area = "" }, new { @class = "navbar-brand" })
            </div><!--navbar-header-->

            <div class="search">
                @using (Html.BeginForm())
                {
                    <p>
                        @Html.TextBox("searchString")
                        <input type="submit" value="Search" />
                        <button onclick="location.href='@Url.Action("Index")';return false;">Cancel</button>

                        @using (Html.BeginForm("Index", "ResourcesController", null, FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
                        {

                        }
                    </p>
                }
            </div><!--search-->



            <div class="right">
                <!--<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    -->
                @Html.ActionLink("+", "Create", "Resources", new { area = "" }, new { @class = "navbar-brand" })
        
                <ul class="login">
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>


    <div class="container-body">
        @RenderBody()
        <hr />
        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
